@page
@model NetshopRazor.Pages.ProfileModel
@{
	string? currentFirstname = HttpContext.Session.GetString("firstname");
	string? currentLastname = HttpContext.Session.GetString("lastname");
	string? currentEmail = HttpContext.Session.GetString("email");
	string? currentPhone = HttpContext.Session.GetString("phone");
	string? currentAddress = HttpContext.Session.GetString("address");
	string? currentRole = HttpContext.Session.GetString("role");
	string? currentCreatedAt = HttpContext.Session.GetString("created_at");
}

<h2 class="my-3">Profile</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}
else if (Model.successMessage.Length > 0)
{
	<div class='alert alert-success alert-dismissible fade show' role='alert'>
		<strong>@Model.successMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">First Name</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentFirstname">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Last Name</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentLastname">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Email</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentEmail">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Phone</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentPhone">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Address</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentAddress">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Role</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentRole">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Create At</label>
	<div class="col-sm-6">
		<input type="text" readonly class="form-control-plaintext" value="@currentCreatedAt">
	</div>
</div>

<div class="row mb-2">
	<div class="offset-sm-3 col-sm-6">
		<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#EditModal">Edit</button>
	</div>
</div>


